    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="resources/favicon.ico" type="image/ico" rel="shortcut icon">
    <script src="resources/jquery-2.1.4.min.js"></script>
    <script src="resources/bootstrap.min.js"></script>
    <script src="resources/lodash.js"></script>
    <link rel="stylesheet" type="text/css" href="resources/bootstrap.css">
</head>

<body>
    <!-- <i>loggedIn: {{loggedIn}}</i> -->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">PLACEly</a>
            </div>
            <!-- MAIN NAVIGATION -->
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="{{#if home}}active{{/if}}"><a href="/">Home</a></li>
                    <li class="{{#if listingPage}}active{{/if}}"><a href="/listings">Listings</a></li>
