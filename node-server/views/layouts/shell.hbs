                    {{#if loggedIn}}
                    <li class="{{#if admin}}active{{/if}}" class="pull-right">
                        <form id="logout-form" action="logout" method="post" role="form">
                            <input type="submit" id="js-log-out" class="btn btn-warning btn-md" href="#" role="button" value="Log out" name="logout"/>
                        </form>
                    </li>
                    {{/if}}
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
        <!--/.container-fluid -->
